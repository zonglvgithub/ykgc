<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_add_btn"
                android:layout_width="150dip"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="add"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_remove_btn"
                android:layout_width="150dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="remove"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <shoplistdownload.example.com.myapplication.My_ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:scrollbars="horizontal"
            android:scrollbarSize="2dip"
            android:scrollbarThumbHorizontal="@drawable/scrollbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <shoplistdownload.example.com.myapplication.TimeChooseView
                    android:id="@+id/time_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="100dip"
                    android:layout_marginRight="10dip" />

            </LinearLayout>


        </shoplistdownload.example.com.myapplication.My_ScrollView>
    </LinearLayout>
</RelativeLayout>